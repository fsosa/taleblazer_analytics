doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Start Bootstrap - SB Admin Version 2.0 Demo
    // Core CSS - Include with every page 
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/font-awesome/css/font-awesome.css', rel='stylesheet')
    // Page-Level Plugin CSS - Blank 
    // SB Admin CSS - Include with every page 
    link(href='/css/sb-admin.css', rel='stylesheet')
  body
    #wrapper
      nav.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0;')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar 
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='index.html') TaleBlazer Analytics

        ul.nav.navbar-top-links.navbar-right
          li.dropdown
            a.dropdown-toggle(data-toggle='dropdown', href='#')
              i.fa.fa-user.fa-fw
              i.fa.fa-caret-down
            ul.dropdown-menu.dropdown-user
              li
                a(href='#')
                  i.fa.fa-user.fa-fw
                  | User Profile
              li
                a(href='#')
                  i.fa.fa-gear.fa-fw
                  | Settings
              li.divider
              li
                a(href='login.html')
                  i.fa.fa-sign-out.fa-fw
                  | Logout
      nav.navbar-default.navbar-static-side(role='navigation')
        .sidebar-collapse
          ul#side-menu.nav
            div.form-group
              select.form-control
                  option 1
                  option 2
                  option 3
                  option 4
            li
              a(href='index.html')
                i.fa.fa-dashboard.fa-fw
                | Overview
            li
              a(href='#')
                i.fa.fa-bar-chart-o.fa-fw
                | Events
                span.fa.arrow
              ul.nav.nav-second-level
                li
                  a(href='flot.html') Flot Charts
                li
                  a(href='morris.html') Morris.js Charts
              //
                 /.nav-second-level 
          //
             /#side-menu 
        //
           /.sidebar-collapse 
      //
         /.navbar-static-side 
      #page-wrapper
        .row
          .col-lg-12
            h1.page-header Overview

            p Games Initiated: #{stats.sessions_initiated}
            p Games Completed: #{stats.sessions_completed} 
            p Average Completion Time: #{stats.avg_completion_time} min 
              
          //
             /.col-lg-12 
        //
           /.row 
      //
         /#page-wrapper 
    //
       /#wrapper 
    //
       Core Scripts - Include with every page 
    script(src='/js/jquery-1.10.2.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/plugins/metisMenu/jquery.metisMenu.js')
    //
       Page-Level Plugin Scripts - Blank 
    //
       SB Admin Scripts - Include with every page 
    script(src='/js/sb-admin.js')
    //
       Page-Level Demo Scripts - Blank - Use for reference 
